generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  NON_TEACHING
  FACULTY
  PRINCIPAL
  HOD
}

enum DEPARTMENT {
  IT
  CSE
  ECOMP
}

enum STATUS {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id            String     @id @default(uuid())
  username      String
  email         String     @unique
  role          ROLE       @default(FACULTY)
  department    DEPARTMENT @default(IT)
  mobile        String
  password      String?
  status        STATUS     @default(PENDING)
  leave_balance Int        @default(10)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

enum LeaveType {
  Earned_Leave
  Reserved_Leave
  Sick_Leave
  Casual_Leave
  Paid_Leave
}

model Leave {
  id         String     @id @default(uuid())
  email      String
  username   String
  role       ROLE
  department DEPARTMENT
  leaveType  LeaveType
  startDate  DateTime
  endDate    DateTime
  reason     String
  status     STATUS     @default(PENDING)
  createdAt  DateTime   @default(now())
}
