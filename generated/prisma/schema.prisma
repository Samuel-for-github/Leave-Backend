generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  NON_TEACHING
  FACULTY
  PRINCIPAL
  HOD
}

enum DEPARTMENT {
  IT
  CSE
  ECOMP
}

enum STATUS {
  PENDING
  ACCEPTED
  REJECTED
  ACCEPTED_BY_HOD
  REJECTED_BY_HOD
}

model User {
  id             String     @id @default(uuid())
  username       String
  email          String     @unique
  role           ROLE       @default(FACULTY)
  department     DEPARTMENT @default(IT)
  mobile         String
  password       String?
  sick_leave     Int        @default(10)
  casual_leave   Int        @default(5)
  paid_leave     Int        @default(5)
  earned_leave   Int        @default(10)
  reserved_leave Int        @default(10)
  status         STATUS     @default(PENDING)
  leave_balance  Int        @default(40)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

enum LeaveType {
  Earned_Leave
  Reserved_Leave
  Sick_Leave
  Casual_Leave
  Paid_Leave
}

model Leave {
  id                String     @id @default(uuid())
  email             String
  username          String
  role              ROLE
  department        DEPARTMENT
  leaveType         LeaveType
  startDate         DateTime
  endDate           DateTime
  reason            String
  date              DateTime
  classOrLab        String
  theoryOrPractical String
  fromTime          DateTime
  toTime            DateTime
  adjustedBy        String
  status            STATUS     @default(PENDING)
  createdAt         DateTime   @default(now())
}
